# Portal Sinais - Configuração de Ambiente

# URLs públicas (substitua pelo IP/domínio da sua VPS)
API_URL=http://SEU_IP_OU_DOMINIO:8000
WS_URL=ws://SEU_IP_OU_DOMINIO:8000/ws

# Banco de dados (padrão do docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/portal_sinais
REDIS_URL=redis://redis:6379/0

# Segurança (altere em produção!)
POSTGRES_PASSWORD=sua_senha_segura_aqui
