# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/portal_sinais
REDIS_URL=redis://localhost:6379/0

# Exchange (Binance)
BINANCE_API_KEY=
BINANCE_SECRET=

# Strategy Settings
# Estratégias disponíveis: GCM, RSI, MACD, RSI_EMA50, SCALPING, SWING_TRADE, DAY_TRADE
ACTIVE_STRATEGIES=["GCM", "RSI", "MACD", "RSI_EMA50", "SCALPING", "SWING_TRADE", "DAY_TRADE"]
TIMEFRAMES=["3m", "15m", "1h", "4h"]
SYMBOLS=["BTCUSDT", "ETHUSDT", "SOLUSDT", "BNBUSDT", "XRPUSDT", "ADAUSDT", "DOGEUSDT", "AVAXUSDT"]

# RSI Settings
RSI_PERIOD=14
RSI_SIGNAL=9
RSI_OVERBOUGHT=85
RSI_OVERSOLD=15

# MACD Settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# GCM Settings
HARSI_LEN=10
HARSI_SMOOTH=5

# COMBO / Day Trade Settings
COMBO_REQUIRE_EMA50=true
COMBO_ALLOW_MIXED_DIR=false
CONFIRM_WINDOW=6

# Scalping Settings
SCALPING_EMA_FAST=9
SCALPING_EMA_SLOW=50

# Telegram Settings
# Obtenha o token do @BotFather no Telegram
# O chat_id pode ser obtido adicionando @userinfobot ao seu grupo
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=true
TELEGRAM_INCLUDE_DISCLAIMER=true

# Worker Settings
CHUNK_SIZE=200
WORKER_INTERVAL_SECONDS=60
